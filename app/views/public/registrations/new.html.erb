<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>


  <div class="field">
    <%= f.label :account_name, "アカウント名" %><br />
    <%= f.text_field :account_name %>
  </div>
  
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  
   <div class="field">
    <%= f.label :last_name, "姓" %><br />
    <%= f.text_field :last_name %>
  </div>
   <div class="field">
    <%= f.label :first_name, "名" %><br />
    <%= f.text_field :first_name %>
  </div>
   <div class="field">
    <%= f.label :last_name_kana, "姓カナ" %><br />
    <%= f.text_field :last_name_kana %>
  </div>
   <div class="field">
    <%= f.label :first_name_kana, "名カナ" %><br />
    <%= f.text_field :first_name_kana %>
  </div>

   <div class="field">
    <%= f.label :gender, "性別" %><br />
    <%#= f.text_field :gender %>
    <%= f.select :gender, User.genders.keys.map { |k| [I18n.t("enums.user.gender.#{k}"), k] } %>

  </div>
   <div class="field">
    <%= f.label :age_groups, "年齢層" %><br />
    <%= f.select :age_groups, User.age_groups.keys.map { |k| [I18n.t("enums.user.age_groups.#{k}"), k] } %>
    <!--k] }の後ろに「, { include_blank: "指定なし" }」を入れるとプルダウンの一番上に"指定なし"が入る（今回は実装しない）-->
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "public/shared/links" %>

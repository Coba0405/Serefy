<div class="container">
    <div class="row mt-5 mb-5">
      <div class="col-xl-10 col-lg-10 col-md-12 col-sm-12 mx-auto">
        <h3 class="text-center"><strong class="border-bottom border-dark">ジャンル一覧・追加/削除</strong></h3>
      
<% @posts.each do |post| %>
  <td><%= image_tag post.user.get_profile_image(100, 100) %></td>
  <td><%= post.user.account_name %></td>
  <td><%= post.title %></td>
  <td><%= image_tag post.get_image(300, 300) %></td>
  <td><%= post.body %></td>
  <td><%#= post.like_count %></td>
  <td><%= link_to "コメント数 #{post.comment.count}", public_post_path(post.id) %></td>
<% end %>
    </div>
  </div>
</div>
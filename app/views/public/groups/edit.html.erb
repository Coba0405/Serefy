<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h3>Editing Group</h3>
      <%= form_with model: @group,url: public_group_path(@group), local: true do |f| %>
        <div>Title</div>
        <div class="form-group">
          <%= f.text_field :group_name, class: 'form-control', required: true %>
        </div>
        <div>やってみたいこと</div>
        <div class="form-group">
          <%= f.text_area :introduction, rows: 5, cols: 40, class: "form-control", required: true %>
        </div>
        <div>ジャンルの選択</div>
        <div class="form-group">
          <%= f.collection_select :genre_id, Genre.all, :id, :name, { prompt: "--choice--" }, { required: true, style: "width: 200px;" } %>
        </div>
      
        <div class="form-group">
          <%= f.submit "変更を保存する", class: "btn btn-secondary btn-block text-center pt-2" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
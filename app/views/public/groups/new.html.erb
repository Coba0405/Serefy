<div class="container">
  <%= form_with model: @group, url: public_groups_path do |f| %>
  <div class="row pb-5">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      ＃トークルーム新規作成画面
      <div>Title</div>
      <%= f.text_field :group_name, class: "form-control", required: true %>
      <div>やってみたいこと</div>
      <%= f.text_area :introduction, rows: 5, cols: 40, class: "form-control", required: true %>
      <div>ジャンルの選択</div>
      <%= f.collection_select :genre_id, Genre.all, :id, :name, { prompt: "--choice--" }, { required: true, style: "width: 200px;" } %>

      <%= f.submit "ルームを作成する", class: "btn btn-secondary btn-block text-center pt-2" %>
    </div>
    <div class="col-md-3"></div>
  </div>
  <% end %>
</div>
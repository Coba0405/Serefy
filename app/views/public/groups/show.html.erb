グループ詳細ページ
<div class="container pt-5 pb-5">
  <div class="card">
    <div class="row">
      <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 mx-auto">
          <h5><%= @group.group_name %></h5>
          <div><%= link_to "#{@group.owner.account_name}", public_user_path(@group.owner) %></div>
          <div><%= "#{@group.introduction}" %></div>
          <div>参加者：<%= "#{@group.users.count}" %>人</div>
          <table>
            <tbody>
              <td>
                <tr>
                  <% @group.users.each do |user| %>
                    <div><%= link_to "#{user.account_name}", public_user_path(user) %></div>
                  <% end %>
                </tr>
              </td>
            </tbody>
          </table>

      </div>
    </div>
    <div class="row">
      <div class="col">
        <% if user_signed_in? %>
          <% if @group.is_owned_by?(current_user) %>
            <%= link_to "Edit", edit_public_group_path(@group) %>
            <%= link_to "Delete", public_group_path(@group), method: :delete, data: { confirm: "グループを削除しますか？"} %>
          <% else %>
            <% if @group.users.include?(current_user) %>
              <%= link_to "脱退する", public_group_path(@group), method: :delete, data: { confirm: "グループを脱退しますか？"} %>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="card mt-4">
    <div class="row">
      <div class="col">
        <%= form_with url: public_group_group_messages_path(@group.id), model: @group_message do |f| %>
          <%= f.text_field :message %>
          <%#= f.hidden_field :group_id, :value => @group.id %>
          <%= f.submit %>
        <% end %>
        <% @group_messages.each do |group_message| %>
          <%= "#{group_message.user.account_name}" %>
          <%= "#{group_message.message}" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
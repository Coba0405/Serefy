<h3>genres</h3>

<%= form_with model: @genre,url: admin_genres_path, method: :post do |f| %>
  <td><%= f.label :"ジャンル名", class: "mr-3" %></td>
  <td><%= f.text_field :name, class: "mr-5" %></td>
  <td><%= f.submit "追加登録", class: "btn btn-primary" %></td>
<% end %>

  <th>Genre</th>
<% @genres.each do |genre| %>
  <td><%= genre.name %></td>
  <td><%= link_to "編集", edit_admin_genre(genre.id), class: "btn btn-primary" %></td>
<% end %>
<% if user_signed_in? %>
  <div class="search_form">
    <%= form_with url: search_path, local: true, method: :get, class: "form-inline" do |f| %>
      <%= f.search_field :word, class: "form-control mr-sm-2", placeholder: "Search" %>
      <%= f.submit "Search", class: "btn btn-outline-success my-2 my-sm-0" %>
    <% end %>
  </div>
<% end %>
         <%= form_with model: @tag, url: admin_tags_path,method: :post do |f| %>
          <table class="table table-border contents-area mt-5">
            <tbody>
              <tr>
                <td class="align-middle">タグ名</td>
                <td class="center align-middle">
                  <%= f.text_field:tag_type,:size=>"35" %>
                </td>
                <td colspan="2"></td>
                <td>
                  <%= f.submit "新規登録", class: "btn btn-primary btn-lg" %>
                </td>
              </tr>
        <% end %>
          <thead class="table-active">
            <tr>
              <th>タグ</th>
              <th colspan="6"></th>
            </tr>
          </thead>
            <tbody>
              <% @tags.each do |tag| %>
                <tr>
                  <td class="align-middle"><%= tag.tag_type %></td>
                  <td colspan="3"></td>
                  <td>
                    <%= link_to "タグを変更する", edit_admin_tag_path(tag.id), class: "btn btn-success" %>
                    <%= link_to "タグを削除する", admin_tag_path(tag.id), class: "btn btn-danger", method: :delete, "data-confirm" => "本当にタグを削除しますか?" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>

          <div class="pagination justify-content-center mt-3">
            <%= paginate @tags, theme: "bootstrap-5" %>
          </div>

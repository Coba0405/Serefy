<!--newとindexを兼ねているページ-->
<div class="container">
  <!--new部分-->
  <div class="row">
    <h3>ジャンルの追加</h3>
  </div>
  
  <div class="row">
    <div class="col-md-3 mx-auto">
      <%= form_with model: @genre,url: admin_genres_path, method: :post do |f| %>
        <td><%= f.label :"ジャンル名", class: "mr-3" %></td>
        <td><%= f.text_field :name, class: "mr-5" %></td>
        <td><%= f.submit "新規登録", class: "btn btn-primary" %></td>
      <% end %>
    </div>
  </div>
  <!--new部分-->
  
  <!--index部分-->
  <div class="row">
    <div class="col-5 mx-auto">
      Genre
    </div>
  </div>
  

  <% @genres.each do |genre| %>
    <div class="row">
      <div class="col-md-4 mx-auto">

      <tr class="center align-middle"><%= genre.name %></tr>
      <tr colspan="4"></tr>
      <tr><%= link_to "編集", edit_admin_genre_path(genre.id), class: "btn btn-primary" %></tr>

      </div>
    </div>
  <% end %>
  <!--index部分-->

</div>
<h3>Genre検索</h3>
<%= form_tag public_posts_path, method: :get, class: 'boards__searchForm' do %>
      <%= select_tag :genre_id,
                     options_from_collection_for_select(Genre.all, :id, :name, params[:genre_id]),
                     {
                       prompt: 'ジャンルを選択',
                       onchange: 'submit(this.form);'
                     }
      %>
    <% end %>
    